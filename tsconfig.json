{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@storefront/*": ["storefront/src/*"],
      "@e2e/*": ["e2e/src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules", "dist", "**/dist"]
}
